<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <PreferenceCategory
        android:title="User Info"
        android:key="user_info">

        <EditTextPreference
            android:key="username"
            android:title="User name"
            android:summary="Your Login Name for this Server"
            android:inputType="textVisiblePassword|textNoSuggestions"
            android:dialogTitle="@string/settings_username_dialog_title"
            android:dialogMessage="@string/settings_username_dialog_message"
             />

        <EditTextPreference
            android:key="apikey"
            android:title="API Key"
            android:summary="Your API key for this server"
            android:inputType="textVisiblePassword|textNoSuggestions"
            android:dialogTitle="@string/settings_apikey_dialog_title"
            android:dialogMessage="@string/settings_apikey_dialog_message"
           	 />

    </PreferenceCategory>
	<PreferenceCategory
        android:title="Server Info"
        android:key="server_info">

        <EditTextPreference
            android:key="base_url"
            android:title="Server URL"
            android:summary="Base URL for the Bookie server"
            android:inputType="textUri"
            android:dialogTitle="@string/settings_baseurl_dialog_title"
            android:dialogMessage="@string/settings_baseurl_dialog_message"
            android:defaultValue="@string/settings_baseurl_defaultvalue"/>

        <EditTextPreference
            android:key="parse_url"
            android:title="Bookie Parser Server URL"
            android:summary="Base URL for the Bookie Parser server"
            android:inputType="textUri"
            android:dialogTitle="@string/settings_parseurl_dialog_title"
            android:dialogMessage="@string/settings_parseurl_dialog_message"
            android:defaultValue="@string/settings_parseurl_defaultvalue"/>

    </PreferenceCategory>
    <PreferenceCategory
        android:title="Theme"
        android:key="theme">
        <ListPreference 
    		android:key="theme_preference"
    		android:title="Choose your theme"
    		android:entries="@array/backgroundColorEntries"
   	 		android:entryValues="@array/backgroundValues"/>
    	    
        
    </PreferenceCategory>

</PreferenceScreen>